<section id="manage-visuals">
    <div class="container">
        <header class="section-intro">
            <h2 data-tippy-content="hello" data-tippy-placement="bottom">Visuals</h2>
            <div class="actions">
                <i id="create-non-existing-visuals" class='bx bxs-plus-circle' data-tippy-content="Create non existing visuals of the current project type" data-tippy-placement="bottom" ></i>
                <i id="render-visuals" class='bx bx-edit' data-tippy-content="Render Visuals" data-tippy-placement="bottom" ></i>
                <i id="render-selected-visual" class='bx bx-message-square-edit' data-tippy-content="Render Selected Visuals" data-tippy-placement="bottom" ></i>
                <i id="import-visual-assets" class='bx bx-git-merge' data-tippy-content="Detect and import visual styles/scripts" data-tippy-placement="bottom" ></i>
                <i id="import-lib-dep" class='bx bx-layer-plus' data-tippy-content="Add the selected lib as visual dependency" data-tippy-placement="bottom" ></i>
            </div>
        </header>
        
