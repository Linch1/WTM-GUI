        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h6>Create Visual</h6>
                        <div class="header-arrow">
                            <i class='bx bx-chevron-up arrow-up'></i>
                            <i class='bx bx-chevron-down arrow-down'></i>
                        </div>
                    </div>
                    <form class="card-body row" id="add-visual-form" >
                        <div class="form-group col-md-6">
                            <label class="col-form-label">name</label>
                            <input class="visual-name form-control" type="text" placeholder="Insert the visual name"  required>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="col-form-label">Author</label>
                            <input class="visual-author form-control" type="text" placeholder="Insert the visual name"  >
                        </div>
                        <div class="form-group col-md-6">
                            <label class="col-form-label">Author Url</label>
                            <input class="visual-author-url form-control" type="text" placeholder="Insert the visual name"  >
                        </div>
                        <div class="form-group col-md-6">
                            <label class="col-form-label">Github Repo</label>
                            <input class="visual-github-repo form-control" type="text" placeholder="Insert the visual name"  >
                        </div>
                        <div class="form-group col-md-12">
                            <input type="checkbox" class="import-all-lib">
                            <label class="col-form-label ">Always automatically import all the visual styles/scripts</label>
                        </div>
                        <div class="form-group col-md-12">
                            <button class="create-visual btn btn-primary">Create Visual</button> 
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h6>Import visual scripts/styles</h6>
                        <div class="header-arrow">
                            <i class='bx bx-chevron-up arrow-up'></i>
                            <i class='bx bx-chevron-down arrow-down'></i>
                        </div>
                    </div>
                    <div class="card-body row"  >
                        <div class="col-md-6">
                            <h5>Scripts</h5>
                            [WTM-HTML-!EXEC!-FOLDER-TREE-VISUALS-SCRIPTS  visualTarget="folderTree"  parentClasses="visuals-scripts" ]
                        </div>
                        <div class="col-md-6">
                            <h5>Styles</h5>
                            [WTM-HTML-!EXEC!-FOLDER-TREE-VISUALS-STYLES  visualTarget="folderTree"  parentClasses="visuals-styles" ]
                        </div>
                        
                        <button id="add-folder-tree-selected-files" class="btn btn-primary">Add selected files</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row ">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h6>Add cdn to selected lib</h6>
                        <div class="header-arrow">
                            <i class='bx bx-chevron-up arrow-up'></i>
                            <i class='bx bx-chevron-down arrow-down'></i>
                        </div>
                    </div>
                    <form class="card-body row" id="add-project-lib-cdn-form-vs">
                        <div class="form-group col-md-6">
                            <label class="col-form-label">Cdn url</label>
                            <input class="pj-lib-cdn form-control"  type="text" name="" value="" placeholder="Insert path to a style" required>
                            <small>select the lib where to add the cdn in the left menu</small>
                        </div>
                        <div class="form-group col-md-6">
                            <button class="btn btn-primary">Add </button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" id="update-visual">
                        <h6>Update Selected Visual</h6>
                        <i class='bx bx-window-open' ></i>
                    </div>
                </div>
            </div>
        </div>

        

    </div>
</section>